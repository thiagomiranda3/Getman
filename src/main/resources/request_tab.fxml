<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.tommiranda.getman.RequestTabController">
    <top>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <ComboBox fx:id="methodComboBox" prefWidth="100.0"/>
                <TextField fx:id="urlField" promptText="Enter request URL" HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendRequest" text="Send"/>
            </children>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
            <items>
                <TabPane tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Body">
                            <content>
                                <StackPane fx:id="requestBodyContainer">
                                    <!-- CodeArea will be added here programmatically -->
                                </StackPane>
                            </content>
                        </Tab>
                        <Tab text="Headers">
                            <content>
                                <VBox>
                                    <children>
                                        <fx:include fx:id="requestHeaders" source="headers_component.fxml"
                                                    VBox.vgrow="ALWAYS"/>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <VBox spacing="5.0">
                    <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Response" style="-fx-font-weight: bold;"/>
                                <Label fx:id="statusLabel" text="Status: "/>
                                <Label fx:id="timeLabel" text="Time: "/>
                                <Label fx:id="sizeLabel" text="Size: "/>
                            </children>
                        </HBox>
                        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                            <tabs>
                                <Tab text="Body">
                                    <content>
                                        <StackPane fx:id="responseBodyContainer">
                                            <!-- CodeArea will be added here programmatically -->
                                        </StackPane>
                                    </content>
                                </Tab>
                                <Tab text="Headers">
                                    <content>
                                        <VBox>
                                            <children>
                                                <fx:include fx:id="responseHeaders" source="headers_component.fxml"
                                                            VBox.vgrow="ALWAYS"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
