<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.tommiranda.getman.MainController">
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="ALL_TABS">
            <tabs>
                <Tab closable="false">
                    <graphic>
                        <Button fx:id="plusButton" text="+" onAction="#onPlusButtonClicked" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14;"/>
                    </graphic>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
